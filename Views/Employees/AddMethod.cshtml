            <div class="form-group">
                @Html.LabelFor(x => Model.MethodId, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-5 mb-3">
                    @Html.DropDownListFor(x => Model.MethodId, 
                                            new SelectList(Model.Methods, "Value", "Text"),
                                            htmlAttributes: new { @class = "select-control", id = "Method"})
                    @Html.ValidationMessageFor(x => x.MethodId, "", new {@class = "text-danger"})
                </div>
            </div>
            
        
            <div class="form-group">
                <div class="col-md-5 mb-3">
                    <label asp-for="DateTaken" class="form-label"></label>
                    <input asp-for="DateTaken" class="form-control datepicker" type="date"/>
                    <span asp-validation-for="DateTaken" class="text-danger"></span>
                </div>
                
            </div>
            
            <div class="form-group mt-5 mb-2 ">
                <input type="submit" value="Add" class="btn btn-outline-primary mr-2" />
                <a asp-action="Details" class="btn btn-outline-dark">Back to List</a>
            </div>

           
        </form>
    </div>

